<div class="container-fluid vh-100 gradient-bg">
    <div class="row h-100">

        <!-- LEFT SIDE -->
        <div class="col-md-6 d-flex align-items-center justify-content-center position-relative">

            <div class="login-card">
                <h2 class="text-center mb-4">Welcome Back</h2>

                <form>
                    <div class="mb-3">
                        <label>Email</label>
                        <input type="email" class="form-control custom-input" placeholder="Enter email" />
                    </div>

                    <div class="mb-3">
                        <label>Password</label>
                        <input type="password" class="form-control custom-input" placeholder="Enter password" />
                    </div>

                    <button class="btn modern-btn w-100">Login</button>
                </form>
            </div>

            <!-- Divider -->
            <div class="vertical-divider"></div>

        </div>

        <!-- RIGHT SIDE IMAGE -->
        <div class="col-md-6 p-0 d-none d-md-block">
            <img src="~/images/login-image.jpg"
                 class="img-fluid h-100 w-100 object-fit-cover" />
        </div>

    </div>
</div>
